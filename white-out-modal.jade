.animate-fade(ng-show="wom.show" style="position:fixed;top:0;left:0;z-index:20;height:100%;width:100%;background-color:rgba(255,255,255,.95);overflow:auto;")
  div(style="position:relative;")
    div(ng-click="wom.show=null" style="position:absolute;top:10px;right:10px;border:1px solid #DDD;border-radius:50%;")
      div(style="cursor:pointer;border-radius:50%;background-color:black;color:white;text-align:center;font-family:Arial;border:3px solid white;line-height:22px;height:25px;width:25px;font-size:23px;")
        |x

  table(style="height:100%;" border="0" align="center" ng-style="{width:wom.size=='full'?'100%':null}")
    tr(ng-hide="wom.size=='full'")
      td(ng-click="wom.show=null")
    tr
      td(ng-transclude)
    tr(ng-hide="wom.size=='full'")
      td(ng-click="wom.show=null")
div(class="animate-fade" ng-show="wom.show" style="position:fixed;top:0;left:0;z-index:20;height:100%;width:100%;background-color:rgba(255,255,255,.95);overflow:auto;")
  div(style="position:relative;opacity:.4;" onmouseover="this.style.opacity=.7" onmouseout="this.style.opacity=.4")
    div(ng-click="wom.show=null" style="cursor:pointer;font-size:190%;position:absolute;top:0;right:0;margin-right:18px;margin-top:10px;line-height:1;")
      |x

  table(style="height:100%;" border="0" align="center" ng-style="{width:wom.size=='full'?'100%':null}")
    tr(ng-hide="wom.size=='full'")
      td(ng-click="wom.show=null")
    tr
      td(ng-transclude)
    tr(ng-hide="wom.size=='full'")
      td(ng-click="wom.show=null")
doctype html
html.font-helvetica.bg-black(lang="en" ng-app="ack-angular")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=0")
    script(src="test.js" type="text/javascript")
    link(href="styles.css" type="text/css" rel="stylesheet")
    //-
      link(href="ack-angular-animations.css" type="text/css" rel="stylesheet")
      link(href="ack-angular-helpers.css" type="text/css" rel="stylesheet")
    style.
      html,body{margin:0;padding:0;}

  body.margin
    .text-white
      .margin-bottom-lg
        h2 General Directives

        h3 select-on
        .pad
          input(select-on="selectOn" select-then="selectOn=false" value="text to select")
          button(ng-click="selectOn=true") selectOn

        h3 focus-on
        .pad
          input(focus-on="focusOn" focus-then="focusOn=false" placeholder="focus")
          button(ng-click="focusOn=true") focusOn

        h3 prevent-back-key
        .pad
          input(prevent-back-key value="you cant backspace")

        h3 prevent-enter-key
        .pad
          textarea(prevent-enter-key value="you cant use enter key")

        h2 Animation Examples

        h3 shake-on Directive Examples
        .pad
          label(shake-on="shakeOn" shake-then="shakeOn=false" shake-type="shakeOnType" shake-controller="shakeController") shake this text&nbsp;
          button(ng-click="shakeOn=true") shake:{{shakeOn||false}}
          select(ng-options="item for item in shakeController.shakeTypes" ng-model="shakeOnType" ng-change="shakeOn=true")
          input(ng-model="shakeController.shakeForMs" ng-change="shakeOn=true")

        h3 shake-model Directive Examples
        .pad
          label(shake-model="shakeModel" shake-type="shakeModelType" shake-controller="shakeModelController") shake this text&nbsp;
          button(ng-click="shakeModel=true") shake:{{shakeModel||false}}
          select(ng-options="item for item in shakeController.shakeTypes" ng-model="shakeModelType" ng-change="shakeModel=true")
          input(ng-model="shakeModelController.shakeForMs" ng-change="shakeModel=true")

        h3 Hide Show Examples
        .pad
          button(type="button" ng-click="showFx=!showFx") hide/show ng-fx
          button(type="button" ng-click="showModal=!showModal") hide/show white-out-modal
          .text-white
            .fx-fade-up(ng-show="showFx")
              h2 ng-fx
              hr
              hr
              hr
              hr
              hr
              hr
              h3 Awesomeness

      .margin-bottom-lg
        h2 CSS Examples

        h3 Form Examples
        .pad
          .form-group.has-error
            label First Name
            input

          .form-group.has-error
            label Last Name
            input
          
          .form-group.has-error
            label Select Checkboxes
            label(for="input-x-0")
              input(type="checkbox" id="input-x-0")
              |&nbsp;Choice 0
            label(for="input-x-0")
              input(type="checkbox" id="input-x-0")
              |&nbsp;Choice 1



        h3 Flex Examples

        h4 Centered Altering Widths and Heights
        .flex.flex-wrap.align-center.justify-center
          .flex-1.margin-xs(ng-repeat="size in [50,100,50,100,50,100,50,100] track by $index")
            .bg-royal.align-center.justify-center.flex(ng-style="{'min-width':size+'px',height:size+'px'}")
              |min : {{size}}

        h4 One-n-Two
        .flex
          .flex-1.text-black.flex.text-center
            .width-full.margin-xs.bg-info
              |1
          .flex-2.text-black.flex.text-center
            .width-full.margin-xs.bg-info
              |2
        .flex
          .text-black.flex.text-center(style="flex:1")
            .width-full.margin-xs.bg-info
              |1
          .text-black.flex.text-center(style="flex:2")
            .width-full.margin-xs.bg-info
              |2

        h4 Ones-n-Twos
        .flex.justify-center.flex-wrap
          .flex-1.flex.flex-wrap.justify-center.margin-bottom-lg(ng-repeat="size in [1,2,1,2,1,2,1,2] track by $index")
            .width-full.pad-xxs
              .text-center.pad-top.bg-primary.opacity-90.margin-bottom-xxs(style="height:50px")
                |part-{{$index}} : {{size}}
              .bg-primary.flex.align-center.justify-center(style="height:100px")
                |part-{{$index}} : {{size}}

    white-out-modal(show="showModal")
      div(style="border:1px solid black;")
